{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Malay Corpus Dictionary",
    "description": "A dictionary of Malay words",
    "type": "object",
    "properties": {
        "Word": {
            "description": "Word in Malay",
            "type": "object",
            "minLength": 2,
            "properties": {
                "Jawi": {
                    "description": "Jawi variations",
                    "type": "array",
                    "items": {
                        "description": "List of Jawi variations",
                        "source": "Source of the Jawi variation",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Definition": {
                    "description": "Word definitions",
                    "type": "array",
                    "items": {
                        "description": "List of word definitions",
                        "source": "Source of the word definition",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "Etymology": {
                    "description": "Word etymologies",
                    "type": "array",
                    "items": {
                        "description": "List of word etymologies",
                        "source": "Source of the word etymology",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Philology": {
                    "description": "Word philologies",
                    "type": "array",
                    "items": {
                        "description": "List of word philologies",
                        "source": "Source of the word philology",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Translation": {
                    "description": "Word translations",
                    "type": "array",
                    "items": {
                        "description": "List of word translations",
                        "source": "Source of the word translation",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Example": {
                    "description": "Word examples",
                    "type": "array",
                    "items": {
                        "description": "List of word examples",
                        "source": "Source of the word example",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Reference": {
                    "description": "Word references",
                    "type": "array",
                    "items": {
                        "description": "List of word references",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                }
            }
        }
    }
}