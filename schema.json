{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Malay Corpus Dictionary",
    "description": "A dictionary of Malay words",
    "type": "object",
    "properties": {
        "Word": {
            "description": "Word in Malay",
            "type": "string",
            "minLength": 2
        },
        "Properties": {
            "description": "Properties of the word",
            "type": "object",
            "minLength": 2,
            "properties": {
                "Jawi": {
                    "description": "The Arabic alphabet used for the word",
                    "type": "array",
                    "items": {
                        "description": "List of Jawi variations",
                        "type": "object",
                        "properties": {
                            "Source": {
                                "description": "Sources of the variation",
                                "type": "array",
                                "items": {
                                    "description": "Source of the variation",
                                    "type": "string",
                                    "uniqueItems": true
                                }
                            }
                        },
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "Definition": {
                    "description": "An explanation of the word",
                    "type": "array",
                    "items": {
                        "description": "List of word definitions",
                        "type": "object",
                        "properties": {
                            "Source": {
                                "description": "Sources of the definition",
                                "type": "array",
                                "items": {
                                    "description": "Source of the definition",
                                    "type": "string",
                                    "uniqueItems": true
                                }
                            }
                        },
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "Etymology": {
                    "description": "The history of the word",
                    "type": "array",
                    "items": {
                        "description": "List of word etymologies",
                        "type": "object",
                        "properties": {
                            "Word": {
                                "description": "Word in particular language",
                                "type": "string",
                                "minLength": 2
                            },
                            "Pronunciation": {
                                "description": "Pronunciation of the word",
                                "type": "string",
                                "minLength": 2
                            },
                            "Source": {
                                "description": "Sources of the etymology",
                                "type": "array",
                                "items": {
                                    "description": "Source of the etymology",
                                    "type": "string",
                                    "uniqueItems": true
                                }
                            },
                            "Language": {
                                "description": "Language of the word",
                                "type": "string",
                                "minLength": 2
                            }
                        },
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "Philology": {
                    "description": "The study of the word",
                    "type": "array",
                    "items": {
                        "description": "List of studies",
                        "type": "object",
                        "properties": {
                            "Source": {
                                "description": "Sources of the study",
                                "type": "array",
                                "items": {
                                    "description": "Source of the study",
                                    "type": "string",
                                    "uniqueItems": true
                                }
                            }
                        },
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                },
                "Reference": {
                    "description": "Word references",
                    "type": "array",
                    "items": {
                        "description": "List of word references",
                        "type": "string",
                        "minLength": 2
                    },
                    "minItems": 1,
                    "uniqueItems": false
                }
            }
        },
        "required": [
            "Word",
            "Definition"
        ]
    }
}